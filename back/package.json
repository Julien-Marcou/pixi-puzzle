{
  "name": "pixi-puzzle-back",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run clean && npm run assets && esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/pixi-puzzle/index.js",
    "serve": "npm run clean && npm run assets && tsc-watch --onSuccess \"node ./dist/pixi-puzzle/index.js\" --noClear",
    "lint": "eslint \"**/*.ts\"",
    "clean": "rimraf dist/pixi-puzzle",
    "assets": "cpy .env dist/pixi-puzzle"
  },
  "private": true,
  "dependencies": {
    "cookie": "^1.1.1",
    "dotenv": "^17.2.3",
    "inversify": "^7.11.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/node": "^24.10.8",
    "cpy-cli": "^6.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "rimraf": "^6.1.2",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
